<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/intro_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_60"
            android:layout_marginBottom="@dimen/txt_16"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/intro_title_3"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/intro_content_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intro_title_3"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:text="@string/intro_content_3"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"                   />

        <ImageView
            android:id="@+id/intro_image_3"
            android:layout_below="@+id/intro_content_3"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/txt_16"
            android:layout_height="@dimen/margin_300"
            android:contentDescription="@null"
            android:src="@drawable/ic_facebook_logo" />

    </LinearLayout>

</RelativeLayout>
