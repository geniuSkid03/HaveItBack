<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <com.geniuskid.haveitback.views.IntroViewPager
        android:id="@+id/intro_view_pager"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/margin_20"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/intro_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/indicating_circles"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_20"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toStartOf="@+id/skip_or_start"
            android:layout_toLeftOf="@+id/skip_or_start"
            android:gravity="start"
            android:orientation="horizontal" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/skip_or_start"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_20"
            android:animateLayoutChanges="true"
            android:background="@drawable/intro_screen_btn_bg"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/skip"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>